---
import Layout from "../layouts/Layout.astro";
import HomepageLinks from "../components/HomepageLinks.astro";
import IconLink from "../components/IconLink.astro";
---

<Layout title="prune | 🌳✂️🍃🧘">
	<nav></nav>
	<main>
		<div class="left-filler"></div>
		<div class="hero-container">
			<div class="top-filler"></div>
			<section class="hero">
				<img src="/images/prune-banner.svg" alt="prune your tabs" />
				<div class="hero-sub">
					<p>
						a simple browser extension to help you trim your garden
						of tabs.
					</p>
					<div class="download-links">
						<HomepageLinks />
					</div>
				</div>
			</section>
			<div class="bottom-filler"></div>
		</div>
		<div class="right-filler"></div>
	</main>
	<footer>
		<div class="left-filler"></div>
		<div class="footer">
			<p></p>
			<p>
				made with 🫗🌞🪴 by <a href="https://theo.lol">theo</a> | bugs? features?
				code? -> <IconLink
					component={"span"}
					icon="🐙"
					href="https://github.com/tbrockman/prune"
					text="github"
				/>
			</p>
		</div>
		<div class="right-filler"></div>
	</footer>
</Layout>

<style>
	:global(:root) {
		--color-text-primary: #333;
		--color-text-secondary: rgb(49, 28, 71);
		--color-text-tertiary: #999;
		--color-background: #f8f8f8;
		--color-accent: #ff6b81;
	}

	main {
		display: flex;
		align-items: center;
		flex: 1;
		font-size: 20px;
		line-height: 1.6;
		flex-direction: row;
	}

	footer {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		/* background-color: var(--color-background); */
		color: var(--color-text-tertiary);
		font-size: 14px;
	}

	.footer {
		padding: 0 1rem;
		display: flex;
		flex-direction: column;
		align-self: flex-start;
		justify-content: flex-end;
	}

	.left-filler {
		flex: 1;
	}

	.right-filler {
		flex: 4;
	}

	.top-filler {
		flex: 4;
	}

	.bottom-filler {
		flex: 1;
	}

	.hero {
		/* padding-top: calc(25% - 2rem); */
	}

	.hero-container {
		display: flex;
		max-width: 600px;
		width: calc(100% - 2rem);
		height: 100%;
		flex-direction: column;
	}

	.hero-sub {
		padding: 0 1rem;
	}

	.download-links {
		display: flex;
		flex-wrap: wrap;
		margin-top: 2rem;
	}
</style>
